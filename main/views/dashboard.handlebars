<main>
  {{#if blogPosts.length}}
  <div class="d-flex mb-3 align-items-center">
    <h4 class="mb-0">Your Posts</h4>
    <a href="/new-post" class="mx-3 btn btn-primary btn-sm">New Post</a>
  </div>
    {{#each blogPosts as |post| }}
      <div class="card border-primary mb-3 w-100">
        <div class="card-header bg-darkorange text-light d-flex align-items-center">
          <h5>
            <a href="/edit/{{post.id}}" class="link-light link-underline link-underline-opacity-0">{{post.title}}</a>
          </h5>
          <small class="ms-auto">Posted by {{post.user.username}} on <cite>{{format_date post.date_created}}</cite></small>
        </div>
        <div class="card-body text-primary">
          <p class="card-text">{{post.body}}</p>
        </div>
      </div>
    {{/each}}
  {{else}}
     <p>No posts found.</p>
  {{/if}}
</main>