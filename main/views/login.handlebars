<div class="row g-3">
  <div class="col-md-7">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="col-12 mb-3">
        <label class="form-label" for="username-login">Username:</label>
        <input class="form-control" type="text" id="username-login" />
      </div>
      <div class="col-12 mb-3">
        <label class="form-label" for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login"/>
        <div class="form-text">
          Don't have an account? <a href="/signup">Sign up here</a>
        </div>
      </div>
     
      <button class="w-25 btn btn-primary btn-lg" type="submit">Login</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
