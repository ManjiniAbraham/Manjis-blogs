<div class="row g-3">
  <div class="col-md-7">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="col-12 mb-3">
        <label class="form-label" for="username-login">Username:</label>
        <input class="form-control" type="text" id="username-signup" />
      </div>
      <div class="col-12 mb-3">
        <label class="form-label" for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-signup"/>
        <div class="form-text">
          Have an account? <a href="/login">Login here</a>
        </div>
      </div>
     
      <button class="w-100 btn btn-primary btn-lg" type="submit">Sign Up</button>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>
